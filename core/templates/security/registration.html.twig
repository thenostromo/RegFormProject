{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block styles %}{% endblock %}

{% block content %}
    <section class="hero is-info is-fullheight">
        {% include 'embed/header.html.twig' %}

        <div class="hero-body">
            <div class="container">
                <div class="column is-6 is-offset-3">
                    <h1 class="title">
                        {{ interface["registration_page.form_header"] }}
                    </h1>
                    <div id="app"></div>
                </div>
            </div>
        </div>

        {% include 'embed/footer.html.twig' %}
    </section>
{% endblock %}

